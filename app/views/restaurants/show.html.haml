- if @cart
  Cart:
  = @cart.shopping_cart_items.count
  (
  = link_to "Show cart" , cart_path(@cart)
  )
    
%p= @restaurant.name
%p= @restaurant.address
%p= @restaurant.description
- @dishes.each do |dish|
  %p
    Dish:
    = dish.name
  %p
    Description:
    = dish.description
  %p
    Category:
    = dish.category
  %p
    Restaurant:
    = dish.restaurant
  %p
    Price:
    = dish.price
    $
  %img{alt: dish.name, src: dish.pic_url}/

  = link_to "Add #{dish.name} to cart", add_to_cart_path(dish, restaurant_id: @restaurant.id)
  - if @cart && !@cart.shopping_cart_items.empty? && @cart.shopping_cart_items[0].item_id == dish.id
    = link_to "Remove #{dish.name} from cart", cart_remove_item_path(dish, restaurant_id: @restaurant.id, dish_id: dish.id)